<script type="text/javascript"><!--//<![CDATA[
  $(function() {
    var menu_elements = $('#moz-nav-header .extended, #moz-nav-body .extended');

    $(menu_elements).click(function(e) {
      var $target = $(e.target);
      var $this = $(this);
      var originally_focused = $this.hasClass('focused');
      $(menu_elements).removeClass('focused');

      if (!originally_focused) {
        $this.addClass('focused');
      }
    });
    
    $('body').click(function(e) {
      var $target = $(e.target);
      if (menu_elements.has($target).length === 0) {
        $(menu_elements).removeClass('focused');
      }
    });

    $('#moz-nav-header .feedback').click(function(e) {
      if (typeof Zenbox !== "undefined") {
        Zenbox.show();
        return false;
      }
    });
      
  });
//]]>--></script>

